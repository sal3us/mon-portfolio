---
export interface Props {
  title: string;
  img: string;
  description: string;
  link: string;
}

const { title, img, description, link } = Astro.props;
---

<li class="li-project">
  <img src={img} alt={title} loading="lazy" />
  <p class="title-project">{title}</p>
  <p class="description-project">{description}</p>
  <div class="container-link-project">
    <a href={link} target="_blank">Voir plus</a>
  </div>
</li>

<style>
  .li-project {
    position: relative;
    list-style: none;
    border: 1px solid #3d3e4f;
    overflow: hidden;
    max-width: 380px;
    min-width: 300px;
    width: 100%;
    border-radius: 7px;
    background-color: #25242d;
    z-index: 1;
    min-height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    transition: transform 0.3s, box-shadow 0.3s;
  }
  
  .li-project:hover {
    transform: translateY(-10px);
  }
  
  .li-project img {
    display: block;
    width: 100%;
    height: 200px;
    object-fit: cover;
    object-position: left top;
    user-select: none;
    pointer-events: none;
  }
  
  .title-project {
    color: #f6f6f9;
    padding: 10px;
    font-size: 25px;
    font-weight: 700;
  }
  
  .title-project::first-letter {
    text-transform: capitalize;
  }
  
  .description-project {
    padding: 0 10px;
    color: #f6f6f990;
    font-size: 17px;
    font-weight: 400;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .description-project::first-letter {
    text-transform: capitalize;
  }
  
  .container-link-project {
    width: 100%;
    padding: 20px 10px;
  }
  
  .container-link-project a {
    text-decoration: none;
    padding: 10px;
    background-color: #01be96;
    border-radius: 5px;
    color: #f6f6f9;
  }
</style>
